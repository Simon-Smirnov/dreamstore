                                                       value="{{ value.option_value_id }}"
                                                       id="inner_{{ filter_options.pillowcase.option_id }}_{{ key }}" {{ value.active ? 'checked' : "" }}>
                                                <label for="inner_{{ filter_options.pillowcase.option_id }}_{{ key }}">{{ value.name }}</label>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    {# опция вышивка #}
                    {% if filter_options.embroidery %}
                        <div class="filter-inner__block" data-filter-checkbox data-toggler-parent>
                            <button class="filter-inner__toggler"
                                    data-toggler>
                                <span>{{ filter_options.embroidery.name }}</span>
                                <svg class="hover-svg-light-stroke" xmlns="http://www.w3.org/2000/svg">
                                    <use xlink:href="/sprite.svg#icon_arrow_right"></use>
