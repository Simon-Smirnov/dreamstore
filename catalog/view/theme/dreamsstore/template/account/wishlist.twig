{{ header }}
<div id="account-wishlist">
    <div class="container">
        <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
            {% endfor %}
        </ul>
    </div>
    <div class="container">
        <div class="wishlist">
            <div id="content" class="wishlist-content">
                <h1 class="page-title">{{ heading_title }}</h1>
                {% if products %}
                    <div class="wishlist-products products_grid" data-wishlist>
                        {% for product in products %}
                            <a class="products_grid-item zoom-trigger" href="{{ product.href }}"
                               data-wishlist-quick="{{ product.product_id }}">
                                <div class="products_grid-thumb">
                                    <div class="products_grid-block">
                                        <div class="zoom-container">
                                            <div class="zoom-image">
                                                <picture>
                                                    <source srcset="{{ product.thumb.webp }}">
                                                    <img class="catalog-inner_link-img" alt="{{ product.name }}"
                                                         title="{{ product.name }}"
                                                         src="{{ product.thumb.default }}" loading="lazy">
                                                </picture>
                                            </div>
                                        </div>
                                        <p class="products_grid-price">
                                            {% if not product.special %}
                                                <span
                                                        class="price-new">{{ product.price }}</span>
                                            {% else %}
                                                <span
                                                        class="price-new">{{ product.special }}</span>
                                                <span
                                                        class="price-old">{{ product.price }}</span>
                                                <span class="price-percent">{{ product.percent }}</span>
                                            {% endif %}
                                        </p>
                                    </div>
                                    <h4 class="products_grid-title">{{ product.name }}</h4>
                                    <button class="products_grid-wishlist inWishlist" type="button"
                                            title="{{ button_wishlist }}"
                                            data-wishlist-remove="{{ product.product_id }}">
                                        <svg class="icon-svg-whishlist" xmlns="http://www.w3.org/2000/svg">
                                            <use xlink:href="/sprite.svg#icon_heart"></use>
                                        </svg>
                                    </button>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="wishlist-empty">{{ text_empty }}</p>
                    <div class="wishlist-btn">
                        <a href="/"
                           class="btn btn-primary">
                            На главную
                        </a>
                    </div>
                {% endif %}
            </div>
            <div class="modal atelier-modal" data-modal-type="wishlist-quick" hidden>
                <div class="modal__content">
                    <div class="modal__box model-popup">
                        <button class="modal__close modal__close--fixed"></button>
                        <div class="model-popup__content" data-wishlist-content></div>
                    </div>
                </div>
            </div>
        </div>
        {#        {{ column_left }} #}
        {#        {{ column_right }} #}
        {#        {{ content_bottom }} #}
        {#        {{ content_top }} #}
    </div>
{{ footer }}