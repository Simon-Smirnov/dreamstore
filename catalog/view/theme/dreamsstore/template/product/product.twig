    {% if reviews_to_shop %}
        <section class="product-reviews sliderProductReviews">
            <div class="container">
                <div class="product-reviews__block">
                    <h2 class="section-title">Отзывы покупателей</h2>
                    <a href="/reviews" class="product-reviews__watchAll">
                        <span>Смотреть все</span>
                        <svg xmlns="http://www.w3.org/2000/svg">
                            <use xlink:href="/sprite.svg#icon_arrow_right"></use>
                        </svg>
                    </a>
                </div>
                <div class="reviews_site swiper">
                    <ul class="reviews_site-list swiper-wrapper" data-lightbox-parent>
                        {% for review in reviews_to_shop %}
                            <li class="reviews_site-list_item" data-fancybox="slider">
                                <div class="reviews_site-list_item-title">
                                    <div class="reviews_site-list_item-title_initial">{{ review.initial }}</div>
                                    <div class="reviews_site-list_item-title_block">
                                        <h4 class="reviews_site-list_item-title_block-name">{{ review.name }}</h4>
                                        <ul class="reviews_site-list_item-title_block-grade">
                                            {% for grade in review.grades %}
                                                <li>
                                                    <svg class="icon-svg-star {{ grade }}"
                                                         xmlns="http://www.w3.org/2000/svg">
                                                        <use xlink:href="/sprite.svg#icon_star"></use>
                                                    </svg>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                    <div class="reviews_site-list_item-title_date">
                                        {{ review.date }}
                                    </div>
                                </div>
                                <div class="reviews_site-list_item-text">{{ review.text }}</div>
                                <div class="reviews_site-list_item-images">
                                    {% for image in review.images %}
                                        <picture>
                                            <source srcset="{{ image.webp }}">
                                            <img class="catalog-inner_link-img"
                                                 src="{{ image.default }}" loading="lazy">
                                        </picture>
                                    {% endfor %}
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </section>
    {% endif %}

    {% if recently_viewed_products %}
        <section class="product-recentlyViewed sliderProductRecentlyViewed">
            <div class="container">
                <h2 class="section-title">Ранее вы смотрели</h2>
                <div class="swiper">
                    <ul class="product-recentlyViewed__list swiper-wrapper" data-lightbox-parent>
                        {% for recently_viewed_product in recently_viewed_products %}
                            <li class="product-recentlyViewed__item">
                                <div class="products_grid-thumb">
                                    <div class="products_grid-block">
                                        <picture>
                                            <source srcset="{{ recently_viewed_product.thumb.webp }}">
                                            <img class="catalog-inner_link-img" alt="{{ recently_viewed_product.name }}"
                                                 title="{{ recently_viewed_product.name }}"
                                                 src="{{ recently_viewed_product.thumb.default }}" loading="lazy">
                                        </picture>
                                        <p class="products_grid-price">
                                            {% if not recently_viewed_product.special %}
                                                <span
                                                        class="price-new">{{ recently_viewed_product.price }}</span>
                                            {% else %}
                                                <span
                                                        class="price-new">{{ recently_viewed_product.special }}</span>
                                                <span
                                                        class="price-old">{{ recently_viewed_product.price }}</span>
                                                <span class="price-percent">{{ recently_viewed_product.percent }}</span>
                                            {% endif %}
                                        </p>
                                    </div>
