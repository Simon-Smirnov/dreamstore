                                        <div class="filter-inner__checkbox">
                                            <div class="checkbox">
                                                <input class="input-checkbox" type="checkbox"
                                                       name="filter_option[{{ filter_options.bedsheet.option_id }}]"
                                                       value="{{ value.option_value_id }}"
                                                       id="inner_{{ filter_options.bedsheet.option_id }}_{{ key }}" {{ value.active ? 'checked' : "" }}>
                                                <label for="inner_{{ filter_options.bedsheet.option_id }}_{{ key }}">{{ value.name }}</label>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    {# опция наволочки #}
                    {% if filter_options.pillowcase %}
                        <div class="filter-inner__block" data-filter-checkbox data-toggler-parent>
                            <button class="filter-inner__toggler"
                                    data-toggler>
                                <span>{{ filter_options.pillowcase.name }}</span>
                                <svg class="hover-svg-light-stroke" xmlns="http://www.w3.org/2000/svg">
                                    <use xlink:href="/sprite.svg#icon_arrow_right"></use>
