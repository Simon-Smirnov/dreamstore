                                                <input class="input-checkbox" type="checkbox"
                                                       name="filter_option[{{ filter_options.blanket.option_id }}]"
                                                       value="{{ value.option_value_id }}"
                                                       id="inner_{{ filter_options.blanket.option_id }}_{{ key }}" {{ value.active ? 'checked' : "" }}>
                                                <label for="inner_{{ filter_options.blanket.option_id }}_{{ key }}">{{ value.name }}</label>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    {# аттрибут материал #}
                    {% if filter_attributes.material %}
                        <div class="filter-inner__block" data-filter-checkbox data-toggler-parent>
                            <button class="filter-inner__toggler"
                                    data-toggler>
                                <span>{{ filter_attributes.material.name }}</span>
                                <svg class="hover-svg-light-stroke" xmlns="http://www.w3.org/2000/svg">
                                    <use xlink:href="/sprite.svg#icon_arrow_right"></use>
                                </svg>
                            </button>
                            <div class="filter-inner__body">
                                <div class="filter-inner__checkboxes">
                                    {% for key, value in filter_attributes.material.values %}
                                        <div class="filter-inner__checkbox">
                                            <div class="checkbox">
                                                <input class="input-checkbox" type="checkbox"
                                                       name="filter_attribute[{{ filter_attributes.material.attribute_id }}]"
                                                       value="{{ value.value ? value.value : value.name }}"
                                                       id="inner_{{ filter_attributes.material.attribute_id }}_{{ key }}" {{ value.active ? 'checked' : "" }}>
                                                <label for="inner_{{ filter_attributes.material.attribute_id }}_{{ key }}">{{ value.name }}</label>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    {# аттрибут плотность ткани #}
                    {% if filter_attributes.density %}
                        <div class="filter-inner__block" data-filter-checkbox data-toggler-parent>
                            <button class="filter-inner__toggler"
                                    data-toggler>
                                <span>{{ filter_attributes.density.name }}</span>
