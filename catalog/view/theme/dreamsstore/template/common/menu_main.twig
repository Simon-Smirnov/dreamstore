{% if categories %}
    <nav class="menu-nav">
        {% for category in categories %}
            {% if category.children %}
                <li class="menu-item dropdown">
                    <p class="menu-item_link hover-dark"
                       data-toggle="dropdown">{{ category.name }}</p>
                    <div class="dropdown-menu">
                        <a class="dropdown-menu-children__all see-more" href="{{ category.href }}">
                            <span>Все товары в категории</span>
                            <svg class="dropdown-menu-children__svg" xmlns="http://www.w3.org/2000/svg">
                                <use xlink:href="/sprite.svg#icon_arrow_right"></use>
                            </svg>
                        </a>
                        <div class="dropdown-menu__sub">
                            {% for child in category.children %}
                                <ul class="dropdown-menu-children__list">
                                    {% if child.grandChildren %}
                                        <li class="dropdown-menu-children__item">
                                            <p class="dropdown-menu-children__link"
                                               href="{{ child.href }}">
                                                {{ child.name }}
                                            </p>
                                            <ul class="dropdown-menu-grandChildren__list">
                                                {% for grandChild in child.grandChildren %}
                                                    <li class="dropdown-menu-grandChildren__item">
                                                        <a class="dropdown-menu-grandChildren__link hover-light"
                                                           href="{{ grandChild.href }}">
                                                            {{ grandChild.name }}
                                                        </a>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        </li>
                                    {% else %}
                                        <li class="dropdown-menu-children__item">
                                            <a class="dropdown-menu-children__link hover-light"
                                               href="{{ child.href }}">
                                                {{ child.name }}
                                            </a>
                                        </li>
                                    {% endif %}
                                </ul>
                            {% endfor %}
                        </div>
                    </div>
                </li>
            {% else %}
                <li class="menu-item">
                    <a class="menu-item_link hover-dark" href="{{ category.href }}">{{ category.name }}</a>
                </li>
            {% endif %}
        {% endfor %}
    </nav>
{% endif %}
