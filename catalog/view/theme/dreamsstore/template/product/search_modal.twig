<div class="search-modal">
    <div class="container">
        <div class="search-modal__inner">
            <div class="search-modal__block">
                <h3 class="search-modal__block--title">Поиск</h3>
                <svg class="search-modal__block--cross" data-modal-search-close xmlns="http://www.w3.org/2000/svg">
                    <use xlink:href="/sprite.svg#icon_cross"></use>
                </svg>
            </div>

            <div class="search-modal__inlet">
                <input class="search-modal__input" type="text" name="search" value="{{ search }}"
                       placeholder="Поиск среди товаров..."
                       id="input-search" class="form-control"/>
                <svg class="search-modal__svg" xmlns="http://www.w3.org/2000/svg">
                    <use xlink:href="/sprite.svg#icon_search"></use>
                </svg>
                <svg class="search-modal__close" xmlns="http://www.w3.org/2000/svg">
                    <use xlink:href="/sprite.svg#icon_cross"></use>
                </svg>
            </div>
            <div class="search-modal__tips" data-seacrh-modal-tips>

            </div>
            {% if products_recomended %}
                <div class="search-modal__recomended sliderModalSearch">
                    <div class="search-modal__recomended--block">
                        <h3 class="search-modal__recomended--title section-title">Вам может быть интересно</h3>
                        <div class="search-modal__recomended--arrows">
                            <div class="search-modal__recomended--prev">
                                <svg class="slider__arrow--prev"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <use xlink:href="/sprite.svg#icon_arrow_right"></use>
                                </svg>
                            </div>
                            <div class="search-modal__recomended--next">
                                <svg class="slider__arrow--next"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <use xlink:href="/sprite.svg#icon_arrow_right"></use>
                                </svg>
                            </div>
                        </div>
                    </div>
                    <div class="sliderModalSearch">
                        <div class="swiper">
                            <ul class="swiper-wrapper" data-lightbox-parent>
                                {% for product in products_recomended %}
                                    <li class="product-recentlyViewed__item">
                                        <div class="products_grid-thumb">
                                            <div class="products_grid-block">
                                                <picture>
                                                    <source srcset="{{ product.thumb.webp }}">
                                                    <img class="catalog-inner_link-img" alt="{{ product.name }}"
                                                         title="{{ product.name }}"
                                                         src="{{ product.thumb.default }}" loading="lazy">
                                                </picture>
                                                <p class="products_grid-price">
                                                    {% if not product.special %}
                                                        <span
                                                                class="price-new">{{ product.price }}</span>
                                                    {% else %}
                                                        <span
                                                                class="price-new">{{ product.special }}</span>
                                                        <span
                                                                class="price-old">{{ product.price }}</span>
                                                        <span class="price-percent">{{ product.percent }}</span>
                                                    {% endif %}
                                                </p>
                                            </div>
                                            <h4 class="products_grid-title">{{ product.name }}</h4>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>